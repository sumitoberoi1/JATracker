<article>
  <div class="jumbotron text-center">
  </div>
  <div class="add-form">
    <form action="/user/work_experience" method="post" class="md-form" id="work-experience-submission">
      <h2>Add your current or previous job experience..</h2>

      <div class="form-group">
        <label for="jobTittle">Job Tittle</label>
        <input id="jobTittle" type="text" name="jobTittle" placeholder="Enter Job Tittle (required)" class="form-control" />
      </div>

      <div class="form-group">
        <label for="employer">Employer</label>
        <input id="employer" type="text" name="employer" placeholder="Enter Employer (required)" class="form-control" />
      </div>

      <div class="form-group">
        <label for="startDate">Start Date</label>
        <input id="startDate" type="date" name="startDate" placeholder="Enter Start Date (required)" class="form-control" />
      </div>
      <div class="form-group" <div class="checkbox">
        <label class="checkbox-custom">
          <input type="checkbox" name="present_job" id="present_job" value="yes">
          <i class="fa fa-fw fa-square-o"></i> Present Job
        </label>
      </div>
    </form>
  </div>
  <div class="form-group">

    <div class="input" id="endDateinput">
      <label for="endDate">End Date</label>
      <input id="endDate" type="date" name="endDate" placeholder="Enter End Date" value="{{workExperience.endDate}}"
        class="form-control" />
    </div>
  </div>

  <div class="form-group">
    <label for="location">Location</label>
    <input id="location" type="text" name="location" placeholder="Enter the city you worked..." class="form-control" />
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" class="form-control" rows="4" placeholder="Any Other Description" name="description"></textarea>
  </div>

  <button id="cancel" name="cancel" class="btn btn-danger" type="button">Cancel</button>
  <button id="save" name="save" class="btn btn-primary" type="submit">Save</button>
  </form>
  </div>

</article>
<script src="/public/js/Present_job.js"></script>