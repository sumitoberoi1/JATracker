<article>
    <div class="jumbotron text-center">
        <h1>View Profile</h1>
    </div>
    <div class="container">
        <div class="card my-3">
            <div class="card-header">
                <h2 class="card-title">Personal Details</h2>
            </div>
            <div class="card-body">
                <p class="card-text">Full Name: {{profile.fullName}}</p>
                <p class="card-text">School: {{profile.school}}</p>
                <p class="card-text">Skills: {{profile.skills}}</p>
                <p class="card-text">Present Job: {{profile.presentJob}}</p>
            </div>
            <div class="clearfix visible-xs"></div>
        </div>
        <div class="card my-3">
            <div class="card-header">
                <h2 class="card-title">Resume/Cover Letter</h2>
            </div>
            <div class="card-body">

                <p class="card-text">Path to Resume: {{profile.resume}}</p>
                <p class="card-text">Path to Cover Letter: {{profile.coverLetter}}</p>
            </div>
        </div>
        <div class="clearfix visible-xs"></div>

        <div class="span8">
            {{#unless profile.workExperience}}
            <div class="card my-3">
                <div class="card-header">
                    <h2 class="card-title">Work Experience</h2>
                </div>
                <div class="card-body">

                    {{/unless}}
                    {{#each profile.workExperience}}
                    <h5>{{this.jobTittle}}</h5>
                    <p>Employer: {{this.employer}}</p>
                    <p>{{#if this.startDate}}Start Date: {{this.startDate}}{{/if}}</p>
                    <p>{{#if this.endDate}}End Date: {{this.endDate}}{{/if}}</p>
                    <p>{{#if this.location}}Location: {{this.location}}{{/if}}</p>
                    <p>{{#if this.description}}Description: {{this.description}}{{/if}}</p>
                    <div class="clear"></div>
                    <hr>

                    {{/each}}
                </div>
                <div class="card-footer">
                    <a href="/user/edit_profile" class="card-link">Add Work Experience by clicking Edit Profile</a>
                </div>

            </div>
        </div>
        <div class="clearfix visible-xs"></div>



        <div class="clearfix"></div>
        <div class="card my-3">
            <div class="card-header">
                <h2 class="card-title">Projects</h2>
            </div>
            <div class="card-body">


                {{#unless profile.workExperience}}

                {{!-- <p>Add Projects by clicking EDIT Profile...</p> --}}
                {{/unless}}
            </div>
            {{#each profile.projects}}
            <h5>{{this.name}}</h5>
            <p>{{#if this.Position}}Position: {{this.position}}{{/if}}</p>
            <p>{{#if this.startDate}}Start Date: {{this.startDate}}{{/if}}</p>
            <p>{{#if this.endDate}}End Date: {{this.endDate}}{{/if}}</p>
            <p>{{#if this.description}}Description: {{this.description}}{{/if}}</p>
            <div class="clear"></div>
            <hr>
            {{/each}}
            <div class="card-footer">
                <a href="/user/edit_profile" class="card-link">Add Projects by clicking Edit Profile</a>
            </div>
        </div>
    </div>
    <div class="clearfix visible-xs"></div>
    </div>
    </div>

    <div class="clearfix visible-xs"></div>


    <div class="clearfix visible-xs"></div>
    <div class="container">
        <div class="form-group">

            <a href="/user/edit_profile" class="btn btn-primary btn-lg m-1" role="button">Edit Profile</a>
            <a href="/logout" class="btn btn-danger btn-lg m-1" role="button">Logout</a>
        </div>

        </form>
    </div>

</article>