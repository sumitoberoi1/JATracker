<div class="updateProjectForm" id="updateProjectForm">
    <div class="add-form">
        <form action="/user/profile/project/edit/{{project._id}}" method="post">
        <h2>We only support projects with URLs at the moment...</h2>

        <div class="form-group">
            <label for="name">Name</label>
            <input id="name" type="text" name="name" placeholder="Name" value="{{project.name}}"
            class="form-control" required/>
        </div>

        <div class="form-group">
            <label for="position">Position</label>
            <input id="position" type="text" name="position" placeholder="Enter Position" value="{{project.position}}"
            class="form-control" />
        </div>

        <div class="form-group">
            <label for="projectstartDate">Start Date</label>
            <input id="projectstartDate" type="date" name="projectstartDate" placeholder="Enter Start Date (Required)" value="{{project.startDate}}" class="form-control" />
        </div>

        <div class="form-group">
            <label for="projectendDate">End Date</label>
            <input id="projectendDate" type="date" name="projectendDate" placeholder="Enter End Date" value="{{project.endDate}}" class="form-control" />
        </div>

        <div class="form-group">
            <label for="projectdescription">Description</label>
            <textarea id="projectdescription" class="form-control" rows="4"  placeholder="Any Other Description" name="projectdescription">{{project.description}}</textarea>
        </div>

        <button id="cancel" name="cancel" class="btn btn-danger" type="button" onclick="window.location='/user/edit_profile';">Cancel</button>
        <button id="save" name="save" class="btn btn-success" type="submit">Save</button>
        </form>
    </div>
</div>