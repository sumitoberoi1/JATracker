<div class="updateWorkForm" id="updateWorkForm">
    <div class="add-form">
        <form action="/user/profile/work_experience/edit/{{workExperience._id}}" method="post">
        <h2>Edit your current or previous job experience...</h2>

        <div class="form-group">
            <label for="jobTittle">Job Tittle</label>
            <input id="jobTittle" type="text" name="jobTittle" placeholder="Enter Job Tittle" value="{{workExperience.jobTittle}}"
            class="form-control" required/>
        </div>

        <div class="form-group">
            <label for="employer">Employer</label>
            <input id="employer" type="text" name="employer" placeholder="Enter Employer" value="{{workExperience.employer}}"
            class="form-control" required/>
        </div>

        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input id="startDate" type="date" name="startDate" placeholder="Enter Start Date" value="{{workExperience.startDate}}"
            class="form-control" required/>
        </div>

        <div class="form-group">
            <label for="endDate">End Date</label>
            <input id="endDate" type="date" name="endDate" placeholder="Enter End Date" value="{{workExperience.endDate}}"
            class="form-control" />
        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <input id="location" type="text" name="location" placeholder="Enter the city you worked..." value="{{workExperience.location}}"
            class="form-control" />
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" class="form-control" rows="4"  placeholder="Any Other Description" name="description" >{{workExperience.description}}</textarea>
        </div>

        <button id="cancel" name="cancel" class="btn btn-danger" type="button" onclick="window.location='/user/edit_profile';">Cancel</button>
        <button id="save" name="save" class="btn btn-success" type="submit">Save</button>
        </form>
    </div>
</div>