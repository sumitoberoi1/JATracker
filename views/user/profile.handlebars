<article>
  <div class="jumbotron text-center">
    <h1>View/Edit Profile</h1>
  </div>
  <div class="container">
    <form action="/user/edit_profile_basic" method="POST" class="md-form" id="application-submission">
        <div class="form-group">
          <label for="fullName">
            Full Name </label>
          <input id="fullName" type="text" name="fullName" placeholder="Enter Full Name" value="{{fullName}}"
            class="form-control" required/>
        </div>
        <div class="form-group">
          <label for="school">
            School</label>
          <input id="school" type="text" name="school" placeholder="Enter School" value="{{schoolName}}"
            class="form-control" />
        </div>
        <div class="form-group">
          <label for="skills">Skills</label>
          <input id="skills" type="text" name="skills" placeholder="Enter Skills (Separated by commas)" value="{{skills}}"
            class="form-control" />
        </div>
        <div class="form-group">
          <label for="presentJob">Present Job</label>
          <input id="presentJob" type="text" name="presentJob" placeholder="Enter Present Job" value="{{presentJob}}"
            class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Save</button>
        </div>
      </form>
      <br/>

      <form action="/user/edit_profile_basic" method="POST" class="md-form" id="application-submission">
        <div class="form-group">
          <div class="custom-file">
            <input id="resume" type="file" name="resume" class="custom-file-input" />
            <label for="resume" class="custom-file-label">Upload Resume</label>
          </div>
        </div>
        <div class="form-group">
          <div class="custom-file">
            <input id="coverletter" type="file" name="coverletter" class="custom-file-input" />
            <label for="coverletter" class="custom-file-label">Upload Cover Lette</label>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Save</button>
        </div>
      </form>
      <br/>
      

      {{!-- work experience --}}
      <h3>Work Experience</h3>
      <p>
          {{#unless profile.workExperience}}
          <p>Add more work experience here...</p>
          {{/unless}} 
          {{#each profile.workExperience}}
          <p>{{this.jobTittle}}</p>
          <p>{{this.employer}}</p>
          <p>{{this.startDate}}{{#if this.endDate}}-{{this.endDate}}{{/if}}</p>
          <p>{{#if this.location}} {{this.location}}{{/if}}</p>
          <p>{{#if this.description}} {{this.description}}{{/if}}</p>
          {{/each}}
      </p>

      <button type="button" class="btn bg-blue" onclick="show_work_form()">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Add Work Experience</button>


      {{!-- hidden work form --}}
      <div class="hiddenWorkForm" id="hiddenWorkForm">
        <div class="add-form">
          <form action="/user/profile/work_experience" method="post">
            <h2>Add your current or previous job experience...</h2>

            <div class="form-group">
              <label for="jobTittle">Job Tittle</label>
              <input id="jobTittle" type="text" name="jobTittle" placeholder="Enter Job Tittle (required)" 
                class="form-control" />
            </div>

            <div class="form-group">
              <label for="employer">Employer</label>
              <input id="employer" type="text" name="employer" placeholder="Enter Employer (required)" 
                class="form-control" />
            </div>

            <div class="form-group">
              <label for="startDate">Start Date</label>
              <input id="startDate" type="date" name="startDate" placeholder="Enter Start Date (required)" 
              class="form-control" />
            </div>

            <div class="form-group">
              <label for="endDate">End Date</label>
              <input id="endDate" type="date" name="endDate" placeholder="Enter End Date" class="form-control" />
            </div>

            <div class="form-group">
              <label for="location">Location</label>
              <input id="location" type="text" name="location" placeholder="Enter the city you worked..." 
                class="form-control" />
            </div>

            <div class="form-group">
              <label for="description">Description</label>
              <textarea id="description" class="form-control" rows="4"  placeholder="Any Other Description" name="description"></textarea>
            </div>

            <button id="cancel" name="cancel" class="btn btn-danger" type="button" onclick="hide_work_form()">Cancel</button>
            <button id="save" name="save" class="btn btn-success" type="submit">Save</button>
          </form>
        </div>
      </div>
      
      <br/>
      <br/>

      <button type="button" class="btn bg-blue" onclick="show_project_form()">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Add Project</button>
      <br/>

      {{!-- hidden project form --}}
      <div class="hiddenProjectForm" id="hiddenProjectForm">
        <div class="add-form">
          <form action="/user/profile/project" method="post">
            <h2>We only support projects with URLs at the moment...</h2>

            <div class="form-group">
              <label for="name">Name</label>
              <input id="name" type="text" name="name" placeholder="Name" 
                class="form-control" />
            </div>

            <div class="form-group">
              <label for="position">Position</label>
              <input id="position" type="text" name="position" placeholder="Enter Position (Required)" 
                class="form-control" />
            </div>

            <div class="form-group">
              <label for="startDate">Start Date</label>
              <input id="startDate" type="date" name="startDate" placeholder="Enter Start Date (Required)" class="form-control" />
            </div>

            <div class="form-group">
              <label for="endDate">End Date</label>
              <input id="endDate" type="date" name="endDate" placeholder="Enter End Date" class="form-control" />
            </div>

            <div class="form-group">
              <label for="description">Description</label>
              <textarea id="description" class="form-control" rows="4"  placeholder="Any Other Description" name="description"></textarea>
            </div>

            <button id="cancel" name="cancel" class="btn btn-danger" type="button" onclick="hide_project_form()">Cancel</button>
            <button id="save" name="save" class="btn btn-success" type="submit">Save</button>
          </form>
        </div>
      </div>

  </div>
</article>
