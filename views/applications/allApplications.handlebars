<article>
    <div class="jumbotron text-center">
        <h1>All Applications </h1>
    </div>
    {{#if message}}
    <div class="alert alert-primary" role="alert">
        {{message}}
    </div>
    {{/if}}
    {{#if applications}}
    <div class="container">
        <div class="input-group">
            <label for="SeachApplicationSearchBar">Search Bar</label>
            <input type="text" id="SeachApplicationSearchBar" class="form-control m-1" placeholder="Search for Role or companyName..">
            {{#unless active.futureApplications}}
            <div class="dropdown m-1">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    Filter
                </button>

                <div class="dropdown-menu" id="sort-dropdown" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item">Recent Apply Date First</a>
                    <a class="dropdown-item">Not Submitted</a>
                    <a class="dropdown-item">Under Review</a>
                    <a class="dropdown-item">First Round</a>
                    <a class="dropdown-item">Second Round</a>
                    <a class="dropdown-item">Third Round</a>
                    <a class="dropdown-item">Post Third Round </a>
                    <a class="dropdown-item">Offer Recieved</a>
                    <a class="dropdown-item">No Offer</a>
                    <a class="dropdown-item">Pending</a>
                    <a class="dropdown-item">Offer Rejected</a>
                </div>
            </div>
            {{/unless}}
        </div>
    </div>
    <div class="clearfix"></div>
    {{/if}}
    <div class="container" id='allApplicationContainer'>
        {{#if applications}}
        <ul class="list-group">
            {{#each applications}}
            <li class="list-group-item">
                {{> applicationPartial}}
            </li>
            {{/each}}
        </ul>
        {{else}}
        <div class="card">
            <div class="card-body">
                <p class="text-center"> No Application is found .
                    Please click on button below to create a new application </p>

                <p class="text-center"> <a class="btn btn-primary btn-xs" href="/application/new" role="button">Create
                        New Job Application</a> </p>
            </div>
        </div>
        {{/if}}
    </div>
</article>
<script src="/public/js/allApplicatitons.js"></script>
<link rel="stylesheet" href="/public/css/allApplications.css">